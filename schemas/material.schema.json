{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/material.schema.json",
  "title": "Material",
  "description": "A material used in construction, crafting, or manufacturing in the Whisker Shogunate",
  "type": "object",
  "required": ["id", "type", "category", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^material_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., material_wood_hinoki)"
    },
    "type": {
      "type": "string",
      "const": "material",
      "description": "Entity type"
    },
    "category": {
      "type": "string",
      "enum": ["wood", "metal", "stone", "ceramic", "fabric", "paper", "organic", "magical"],
      "description": "Primary material category"
    },
    "subcategory": {
      "type": "string",
      "description": "More specific classification (e.g., premium, common, decorative)"
    },
    "name": {
      "type": "string",
      "description": "Common name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or kanji if applicable"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the material"
    },
    "properties": {
      "type": "object",
      "description": "Physical and mechanical properties",
      "properties": {
        "durability": {
          "type": "string",
          "enum": ["very-low", "low", "moderate", "high", "very-high"]
        },
        "cost": {
          "type": "string",
          "enum": ["very-cheap", "cheap", "moderate", "expensive", "premium", "rare"]
        },
        "workability": {
          "type": "string",
          "enum": ["very-difficult", "difficult", "moderate", "easy", "very-easy"]
        },
        "appearance": {
          "type": "string",
          "description": "Visual characteristics (color, texture, etc.)"
        },
        "weight": {
          "type": "string",
          "enum": ["very-light", "light", "moderate", "heavy", "very-heavy"]
        },
        "texture": {
          "type": "string",
          "description": "Surface texture description"
        },
        "strength": {
          "type": "string",
          "enum": ["very-weak", "weak", "moderate", "strong", "very-strong"]
        },
        "flexibility": {
          "type": "string",
          "enum": ["rigid", "slightly-flexible", "flexible", "very-flexible"]
        },
        "weatherResistance": {
          "type": "string",
          "enum": ["poor", "fair", "good", "excellent"]
        },
        "cultural": {
          "type": "string",
          "description": "Cultural significance or associations"
        }
      }
    },
    "assets": {
      "type": "object",
      "description": "Visual assets associated with this material",
      "properties": {
        "primary": {
          "type": "string",
          "description": "Primary reference image path"
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Gallery of additional images"
        },
        "diagrams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Technical diagrams or schematics"
        },
        "conceptArt": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Concept art showing material in use"
        },
        "textures": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Texture files for 3D rendering"
        }
      }
    },
    "usedIn": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(location|item|technology|profession)_[a-z0-9_-]+$"
      },
      "description": "Entity IDs where this material is used"
    },
    "requiredFor": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(technology|item|profession)_[a-z0-9_-]+$"
      },
      "description": "Entity IDs that require this material"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^location_[a-z0-9_-]+$"
      },
      "description": "Location IDs where this material is sourced"
    },
    "producedBy": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(profession|faction|technology)_[a-z0-9_-]+$"
      },
      "description": "Who produces or processes this material"
    },
    "relatedMaterials": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^material_[a-z0-9_-]+$"
      },
      "description": "Related or alternative material IDs"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Searchable tags"
    },
    "culturalNotes": {
      "type": "string",
      "description": "Cultural significance, traditions, or lore"
    },
    "gameplayNotes": {
      "type": "string",
      "description": "How this material is used in gameplay"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "How complete this entity definition is"
    },
    "lastModified": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last modification"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of contributors who worked on this entity"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "in-progress", "review", "complete", "locked"],
      "description": "Development status"
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes or TODOs"
    }
  }
}
