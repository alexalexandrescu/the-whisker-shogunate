{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/food.schema.json",
  "title": "Food",
  "description": "A dish, ingredient, beverage, or culinary item in the Whisker Shogunate world",
  "type": "object",
  "required": ["id", "type", "foodType", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^food_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., food_sushi, food_sake)"
    },
    "type": {
      "type": "string",
      "const": "food",
      "description": "Entity type"
    },
    "foodType": {
      "type": "string",
      "enum": ["dish", "ingredient", "beverage", "dessert", "snack", "condiment", "prepared-food"],
      "description": "Type of food item"
    },
    "name": {
      "type": "string",
      "description": "Food name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or romanization"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the food"
    },
    "mainIngredients": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Primary ingredients"
    },
    "preparation": {
      "type": "string",
      "description": "How it's prepared or cooked"
    },
    "regionalOrigin": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Provinces where this originated or is popular"
    },
    "availability": {
      "type": "string",
      "enum": ["common", "seasonal", "regional", "rare", "luxury"],
      "description": "How easy it is to find"
    },
    "cost": {
      "type": "string",
      "enum": ["cheap", "affordable", "moderate", "expensive", "luxury"],
      "description": "Price range"
    },
    "servingStyle": {
      "type": "string",
      "description": "How it's typically served (e.g., 'on small plates', 'in lacquer bowls')"
    },
    "culturalSignificance": {
      "type": "string",
      "description": "Cultural importance or traditions around this food"
    },
    "relatedProfessions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^profession_[a-z0-9_-]+$"
      },
      "description": "Professions that make or serve this"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags (e.g., 'fish', 'rice', 'festival-food')"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "in-progress", "outlined", "stub"],
      "description": "Completion status"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lastModified": {
      "type": "string",
      "format": "date-time"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes"
    }
  }
}
