{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/culture.schema.json",
  "title": "Culture",
  "description": "A cultural element, tradition, practice, or custom in the Whisker Shogunate world",
  "type": "object",
  "required": ["id", "type", "cultureType", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^culture_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., culture_tea-ceremony, culture_path-system)"
    },
    "type": {
      "type": "string",
      "const": "culture",
      "description": "Entity type"
    },
    "cultureType": {
      "type": "string",
      "enum": ["tradition", "custom", "practice", "ritual", "ceremony", "festival", "social-system", "game", "sport", "art-form", "belief"],
      "description": "Type of cultural element"
    },
    "name": {
      "type": "string",
      "description": "Culture element name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or romanization"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the cultural element"
    },
    "region": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Provinces or regions where this is practiced"
    },
    "participants": {
      "type": "string",
      "description": "Who participates (e.g., 'all cats', 'nobles only', 'artisans')"
    },
    "frequency": {
      "type": "string",
      "enum": ["daily", "weekly", "monthly", "seasonal", "annual", "rare", "life-event"],
      "description": "How often this occurs"
    },
    "significance": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Cultural importance level"
    },
    "relatedLocations": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^location_[a-z0-9_-]+$"
      },
      "description": "Related location IDs"
    },
    "relatedProfessions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^profession_[a-z0-9_-]+$"
      },
      "description": "Related profession IDs"
    },
    "relatedFactions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^faction_[a-z0-9_-]+$"
      },
      "description": "Related faction IDs"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "in-progress", "outlined", "stub"],
      "description": "Completion status"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lastModified": {
      "type": "string",
      "format": "date-time"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes"
    }
  }
}
