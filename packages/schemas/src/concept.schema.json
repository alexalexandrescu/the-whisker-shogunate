{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/concept.schema.json",
  "title": "Concept",
  "description": "A game mechanic, system, abstract idea, or world rule in the Whisker Shogunate",
  "type": "object",
  "required": ["id", "type", "conceptType", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^concept_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., concept_the-path, concept_whisker-punk)"
    },
    "type": {
      "type": "string",
      "const": "concept",
      "description": "Entity type"
    },
    "conceptType": {
      "type": "string",
      "enum": ["game-mechanic", "progression-system", "world-rule", "technology-system", "social-system", "economic-system", "mystery"],
      "description": "Type of concept"
    },
    "name": {
      "type": "string",
      "description": "Concept name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or romanization"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the concept"
    },
    "category": {
      "type": "string",
      "description": "Broader category this belongs to"
    },
    "mechanics": {
      "type": "string",
      "description": "How it works mechanically (for game systems)"
    },
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"}
        }
      },
      "description": "Progression stages or phases"
    },
    "requirements": {
      "type": "string",
      "description": "What's needed to access or use this"
    },
    "benefits": {
      "type": "string",
      "description": "What advantages this provides"
    },
    "relatedConcepts": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^concept_[a-z0-9_-]+$"
      },
      "description": "Related concept IDs"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "in-progress", "outlined", "stub"],
      "description": "Completion status"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lastModified": {
      "type": "string",
      "format": "date-time"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes"
    }
  }
}
