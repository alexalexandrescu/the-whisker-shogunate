{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/faction.schema.json",
  "title": "Faction",
  "description": "A guild, organization, group, or political entity in the Whisker Shogunate world",
  "type": "object",
  "required": ["id", "type", "factionType", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^faction_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., faction_merchant-guild, faction_healer-guild)"
    },
    "type": {
      "type": "string",
      "const": "faction",
      "description": "Entity type"
    },
    "factionType": {
      "type": "string",
      "enum": ["guild", "government", "military", "religious", "academic", "criminal", "social-group", "political-party"],
      "description": "Type of faction"
    },
    "name": {
      "type": "string",
      "description": "Faction name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or romanization"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the faction"
    },
    "headquarters": {
      "type": "string",
      "pattern": "^location_[a-z0-9_-]+$",
      "description": "Main headquarters location ID"
    },
    "otherLocations": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^location_[a-z0-9_-]+$"
      },
      "description": "Other significant locations"
    },
    "leader": {
      "type": "string",
      "pattern": "^character_[a-z0-9_-]+$",
      "description": "Current leader character ID"
    },
    "notableMembers": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^character_[a-z0-9_-]+$"
      },
      "description": "Notable member character IDs"
    },
    "membershipSize": {
      "type": "string",
      "description": "Approximate size (e.g., '50 masters', '500+ members')"
    },
    "influence": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low", "minimal"],
      "description": "Political/social influence level"
    },
    "wealth": {
      "type": "string",
      "enum": ["wealthy", "prosperous", "comfortable", "modest", "poor"],
      "description": "Economic status"
    },
    "relationships": {
      "type": "object",
      "properties": {
        "allies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^faction_[a-z0-9_-]+$"
          }
        },
        "rivals": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^faction_[a-z0-9_-]+$"
          }
        },
        "neutral": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^faction_[a-z0-9_-]+$"
          }
        }
      }
    },
    "relatedProfessions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^profession_[a-z0-9_-]+$"
      },
      "description": "Professions associated with this faction"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "in-progress", "outlined", "stub"],
      "description": "Completion status"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lastModified": {
      "type": "string",
      "format": "date-time"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes"
    }
  }
}
