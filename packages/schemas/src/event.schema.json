{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://whisker-shogunate.com/schemas/event.schema.json",
  "title": "Event",
  "description": "A historical event, current happening, or significant occurrence in the Whisker Shogunate world",
  "type": "object",
  "required": ["id", "type", "eventType", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^event_[a-z0-9_-]+$",
      "description": "Unique identifier (e.g., event_great-arrival, event_territorial-wars)"
    },
    "type": {
      "type": "string",
      "const": "event",
      "description": "Entity type"
    },
    "eventType": {
      "type": "string",
      "enum": ["historical", "current", "recurring", "festival", "conflict", "political", "natural-disaster", "cultural"],
      "description": "Type of event"
    },
    "name": {
      "type": "string",
      "description": "Event name in English"
    },
    "nameJapanese": {
      "type": "string",
      "description": "Japanese name or romanization"
    },
    "pronunciation": {
      "type": "string",
      "description": "Phonetic pronunciation guide"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Detailed description of the event"
    },
    "timeframe": {
      "type": "string",
      "description": "When it occurred or occurs (e.g., '200 years ago', 'annually in spring')"
    },
    "era": {
      "type": "string",
      "enum": ["ancient", "great-arrival", "territorial-wars", "recent-history", "current", "future"],
      "description": "Historical era"
    },
    "location": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Where the event took place or takes place"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Character IDs, faction IDs, or general descriptions of participants"
    },
    "causes": {
      "type": "string",
      "description": "What led to this event"
    },
    "consequences": {
      "type": "string",
      "description": "Results and lasting effects"
    },
    "significance": {
      "type": "string",
      "enum": ["critical", "high", "medium", "low"],
      "description": "Historical or cultural importance"
    },
    "relatedEvents": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^event_[a-z0-9_-]+$"
      },
      "description": "Related event IDs"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Categorization tags"
    },
    "status": {
      "type": "string",
      "enum": ["complete", "in-progress", "outlined", "stub"],
      "description": "Completion status"
    },
    "completionPercentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "lastModified": {
      "type": "string",
      "format": "date-time"
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string",
      "description": "Internal development notes"
    }
  }
}
